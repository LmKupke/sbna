<div class="row">
  <div class="col s10 offset-s1">

    <%= form_for(@event, url: @url, method: @method) do |f| %>

      <div class="input-field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
      </div>

      <div class="input-field">
        <%= f.label :location %><br />
        <%= f.text_field :location, placeholder: "Please write a full address!" %>
      </div>

      <div class="input-field">
        <%= f.label :description %><br /><br />
        <%= f.text_area :description %>
      </div>

      <div class="input-field col s6" id="start_date_event">
        <%= f.label :start, id: "event_start_label" %>
        <%= f.text_field :start, id: "datetimepicker" %>
      </div>

      <div class="input-field col s6">
        <%= f.label :end %>
        <%= f.text_field :end, id: "datetimepicker2" %>
      </div>

      <%= f.label :color %>
      <%= f.select :color, options_for_select(EventsController::COLORS)  %>


      <div class="file-field input-field">
        <div class="btn">
          <span>Event Image</span>
          <%= f.file_field :picture %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <div class="actions">
        <%= f.submit @value, class: "btn" %>
      </div>

    <% end %>
  </div>
</div>
