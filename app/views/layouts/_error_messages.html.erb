<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger alert-dismissable">
       <div id="modal1" class="modal">
        <div class="modal-content">
          <h4>Form Errors!</h4>
          <p><strong>This form contains <%= pluralize(object.errors.count, 'error') %>.</strong></p>
          <ul>
            <% object.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <div class="modal-footer">
          <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Got it!</a>
        </div>

        <script>
          $('#modal1').openModal();
        </script>

      </div>
      <!-- <button type="button"  data-dismiss="alert" aria-hidden="true">&times;</button> -->
